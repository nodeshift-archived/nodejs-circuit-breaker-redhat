{
  "name": "nodejs-circuit-breaker-redhat-greeting",
  "version": "2.1.1",
  "author": "Red Hat, Inc.",
  "license": "Apache-2.0",
  "scripts": {
    "test": "tape test/integration/*.js | tap-spec",
    "lint": "xo",
    "coverage": "nyc npm test",
    "coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "start": "node .",
    "prepublish": "license-reporter report -s",
    "openshift": "nodeshift --strictSSL=false --dockerImage=registry.access.redhat.com/rhoar-nodejs/nodejs-10 --metadata.out=nodeshift-metadata.json",
    "postinstall": "license-reporter report -s && license-reporter save -s --xml licenses.xml"
  },
  "main": "./bin/www",
  "xo": {
    "space": 2,
    "rules": {
      "space-before-function-paren": [
        "error",
        "always"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/nodeshift-starters/nodejs-circuit-breaker-redhat.git"
  },
  "files": [
    "package.json",
    "LICENSE",
    "bin",
    "lib",
    "public",
    "app.js",
    "licenses"
  ],
  "bugs": {
    "url": "https://github.com/nodeshift-starters/nodejs-circuit-breaker-redhat/issues"
  },
  "homepage": "https://github.com/nodeshift-starters/nodejs-circuit-breaker-redhat",
  "devDependencies": {
    "istanbul": "~0.4.5",
    "nodeshift": "~3.0.0",
    "nyc": "~14.0.0",
    "tap-spec": "~5.0.0",
    "tape": "~4.10.0",
    "xo": "~0.24.0"
  },
  "gitHubUser": "lance",
  "description": "demonstrates a generic pattern for reporting the failure of a service and then limiting access to the failed service until it becomes available to handle requests.",
  "keywords": [
    "circuitbreaker",
    "circuit",
    "failfast",
    "openshift",
    "resiliency"
  ],
  "dependencies": {
    "body-parser": "~1.18.3",
    "express": "4.16.4",
    "kube-probe": "~0.3.1",
    "license-reporter": "~1.2.2",
    "opossum": "~1.10.0",
    "roi": "~0.18.0",
    "ws": "~6.1.3"
  }
}
